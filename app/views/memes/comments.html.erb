<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<a href="/"><img src="https://img.icons8.com/cotton/64/000000/home--v3.png"/></a>
<div class="container">
    <div class="row">
        <div class="col-4">
            <a href="<%= Meme.find(@meme_id)['url'] %>">
                <img class="imgg" src="<%= Meme.find(@meme_id)['url'] %>"/>
            </a>
        </div>
    </div>
</div>

<div class="comments">
    <form action="/comment/<%= @meme_id %>" method="POST">
        <div class="form-group">
            <input type="text-field" class="form-control form-control-lg" id="comment" placeholder="your comment here" name="comment">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    <br/>
    <% Meme.find(@meme_id).comments.each do |comment| %>
        <h4 class="username"><%= comment.user["username"] %>:</h4>
        <br/>
        <p class="comment"><%= comment["comment"] %></p>
    <% end %>
</div>
<div class="empty">
</div>