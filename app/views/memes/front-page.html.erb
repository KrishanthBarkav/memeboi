<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<ul>
   <li><a href="/"><%= @current_user ? "Hello #{User.find(@current_user)[:username]}" : "Hello" %></a></li>
   <% if(@current_user) %>
      <li><a href="/dashboard">Submit a meme</a></li>
      <li style="float:right"><a class="active" href="/logout">Logout</a></li>
   <% else %>
   <li style="float:right"><a class="active" href="/signup">Signup</a></li>
      <li style="float:right"><a class="active" href="/login">Login</a></li>
   <% end %>
</ul> 
<div class="empty">
</div>
<div class="container">
   <%
      one = []
      two = []
      three = []
      four = []
      l = Meme.all.length - 1
      for i in 0..l
         if(i % 4 == 0)
            one.append(Meme.all[i])
         elsif(i % 4 == 1)
            two.append(Meme.all[i])
         elsif(i % 4 == 2)
            three.append(Meme.all[i])
         elsif(i % 4 == 3)
            four.append(Meme.all[i])
         end
      end
   %>
   <div class="d-flex flex-row flex-wrap justify-content-center">
      
         <div class="d-flex flex-column">
            <% one.each do |meme| %>
               <a href="<%= meme[:url] %>">
                  <img src="<%= meme[:url] %>" alt="meme" width="260">
               </a> 
            <% end %>
         </div>
         <div class="d-flex flex-column">
            <% two.each do |meme| %>
               <a href="<%= meme[:url] %>">
                  <img src="<%= meme[:url] %>" alt="meme" width="260">
               </a> 
            <% end %>
         </div>
         <div class="d-flex flex-column">
            <% three.each do |meme| %>
               <a href="<%= meme[:url] %>">
                  <img src="<%= meme[:url] %>" alt="meme" width="260">
               </a> 
            <% end %>
         </div>
         <div class="d-flex flex-column">
            <% four.each do |meme| %>
               <a href="<%= meme[:url] %>">
                  <img src="<%= meme[:url] %>" alt="meme" width="260">
               </a> 
            <% end %>
         </div>
      
   </div>
</div>
